<Window x:Class="LAB2_NETD3202_ANDRE_AGRIPPA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB2_NETD3202_ANDRE_AGRIPPA"
        mc:Ignorable="d"
        Title="Midsize LLP" Height="450" Width="800">
    <Grid x:Name ="winMainWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="50">
            <ListView SelectionChanged="ListView_SelectionChanged">
                <ListViewItem x:Name ="lsvItemLendOut"  Content="Lend Out" Height="100" />
                <ListViewItem x:Name ="lsvItemViewLendOut"  Content="View Lend Out" Height="100"/>
            </ListView>
        </StackPanel>
        <Grid Grid.Column="1" Background="White" x:Name="ContentPanel">
        </Grid>
    </Grid>
</Window>
