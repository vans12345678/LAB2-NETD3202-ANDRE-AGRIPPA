<!--Beginning of user control, variable names found here-->
    <UserControl x:Class="LAB2_NETD3202_ANDRE_AGRIPPA.SearchEquipment"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:LAB2_NETD3202_ANDRE_AGRIPPA"
                 mc:Ignorable="d" 
                 d:DesignHeight="450" d:DesignWidth="800">
        <!--Beginning of Grid, this is where I place anything going on the user control-->
        <Grid>
            <!--Beginning of stack panel-->
            <StackPanel Grid.Column="1" Margin="50">
                <Label x:Name="lblSearch" Content="Search" HorizontalAlignment="Center"/>
                <Label x:Name="lblEmployeeID" Content="Employee ID" HorizontalAlignment="Left"/>
                <TextBox x:Name="txtSearch"/>
                <Button x:Name="btnSearch" Content="Search" Margin="50" Click="btnSearch_Click"/>
                <!--Beginning of data grid-->
                <DataGrid Name="searchEmployeeGrid"/>
            </StackPanel>
            <!--End of stack panel-->
        </Grid>
        <!--End of grid-->
</UserControl>
<!-- End of user control-->
